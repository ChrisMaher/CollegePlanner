<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.chris.collegeplanner.activity.ViewSingleProject">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="5"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Subject :"
                android:id="@+id/t1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_column="0"
                android:textAlignment="center"
                android:gravity="left|center"
                android:layout_columnWeight="50"
                android:layout_rowWeight="50"
                android:textStyle="bold"
                android:padding="3dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Type :"
                android:id="@+id/t2"
                android:layout_gravity="fill"
                android:layout_column="0"
                android:layout_row="1"
                android:textAlignment="center"
                android:gravity="left|center"
                android:layout_columnWeight="50"
                android:layout_rowWeight="50"
                android:textStyle="bold"
                android:padding="3dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title :"
                android:id="@+id/t3"
                android:layout_gravity="center|fill"
                android:layout_column="0"
                android:layout_row="2"
                android:textAlignment="center"
                android:gravity="left|center"
                android:layout_columnWeight="50"
                android:layout_rowWeight="50"
                android:textStyle="bold"
                android:padding="3dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Worth :"
                android:id="@+id/t4"
                android:layout_gravity="fill"
                android:layout_column="0"
                android:layout_row="3"
                android:textAlignment="center"
                android:gravity="left|center"
                android:layout_columnWeight="50"
                android:layout_rowWeight="50"
                android:textStyle="bold"
                android:padding="3dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Days Left :"
                android:layout_gravity="fill"
                android:id="@+id/t5"
                android:layout_column="0"
                android:layout_row="4"
                android:textAlignment="center"
                android:gravity="left|center"
                android:layout_columnWeight="50"
                android:layout_rowWeight="50"
                android:textStyle="bold"
                android:padding="3dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Medium Text"
                android:layout_gravity="fill"
                android:id="@+id/subjectTextSingleProject"
                android:layout_column="1"
                android:layout_row="0"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_columnWeight="50"
                android:padding="3dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Medium Text"
                android:layout_gravity="fill"
                android:id="@+id/typeTextSingleProject"
                android:layout_column="1"
                android:layout_row="1"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_columnWeight="50"
                android:padding="3dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Medium Text"
                android:layout_gravity="fill"
                android:id="@+id/titleTextSingleProject"
                android:layout_column="1"
                android:layout_row="2"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_columnWeight="50"
                android:padding="3dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Medium Text"
                android:layout_gravity="fill"
                android:id="@+id/worthTextSingleProject"
                android:layout_column="1"
                android:layout_row="3"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_columnWeight="50"
                android:padding="3dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Medium Text"
                android:layout_gravity="fill"
                android:id="@+id/dueDateTextSingleProject"
                android:layout_column="1"
                android:layout_row="4"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_columnWeight="50"
                android:padding="3dp"
                android:textColor="#000000" />
        </GridLayout>

    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:id="@+id/detailsTextSingleProject"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/linearLayout2"
        android:padding="5dp"
        android:hint="Details..."
        android:gravity="top|left"
        android:layout_below="@+id/linearLayout2" />

</RelativeLayout>
