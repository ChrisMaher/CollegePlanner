<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chris.collegeplanner.activity.ViewSingleProject">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:padding="5dp"
            android:rowCount="6">

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="10"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_rowWeight="50"
                android:gravity="left|center"
                android:padding="3dp"
                android:text="Subject :"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="10"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_rowWeight="50"
                android:gravity="left|center"
                android:padding="3dp"
                android:text="Type :"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="10"
                android:layout_gravity="center|fill"
                android:layout_row="2"
                android:layout_rowWeight="50"
                android:gravity="left|center"
                android:padding="3dp"
                android:text="Title :"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="10"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_rowWeight="50"
                android:gravity="left|center"
                android:padding="3dp"
                android:text="Worth :"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="10"
                android:layout_gravity="fill"
                android:layout_row="4"
                android:layout_rowWeight="50"
                android:gravity="left|center"
                android:padding="3dp"
                android:text="Days Left :"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subjectTextSingleProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="50"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:gravity="left|center"
                android:padding="3dp"
                android:text="Medium Text"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/typeTextSingleProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="50"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:gravity="left|center"
                android:padding="3dp"
                android:text="Medium Text"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/titleTextSingleProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="50"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:gravity="left|center"
                android:padding="3dp"
                android:text="Medium Text"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/worthTextSingleProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="50"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:gravity="left|center"
                android:padding="3dp"
                android:text="Medium Text"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/dueDateTextSingleProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="50"
                android:layout_gravity="fill"
                android:layout_row="4"
                android:gravity="left|center"
                android:padding="3dp"
                android:text="Medium Text"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="10"
                android:layout_row="5"
                android:layout_rowWeight="50"
                android:gravity="left|center"
                android:padding="3dp"
                android:text="Date Due :"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DueDateTextSingleProject2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="50"
                android:layout_row="5"
                android:gravity="left|center"
                android:padding="3dp"
                android:text="Medium Text"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </GridLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/detailsTextSingleProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sendToClassmate"
        android:layout_alignEnd="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:cursorVisible="true"
        android:ems="10"
        android:focusable="false"
        android:gravity="top|left"
        android:hint="Details..."
        android:inputType="none"
        android:padding="5dp" />

    <Button
        android:id="@+id/sendToClassmate"
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:layout_alignEnd="@+id/detailsTextSingleProject"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/detailsTextSingleProject"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:background="#f2f1f1"
        android:text="Update Project"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="10px"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detailsTextSingleProject"
        android:background="@color/bg_login" />

</RelativeLayout>
