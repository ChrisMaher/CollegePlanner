<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#eeeeeeee"
    android:paddingBottom="5dp"
    android:paddingTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/RelBackGround"
        android:background="#ffffffff"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:longClickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Subject"
            android:id="@+id/SubjectTextList"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="2dp"
            android:textColor="#ff000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Due"
            android:id="@+id/DueDateTextList"
            android:layout_row="0"
            android:layout_column="6"
            android:padding="10dp"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:textAlignment="gravity"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Project Title"
            android:id="@+id/ProjectTitleTextList"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="2dp"
            android:textColor="#008D7F"
            android:layout_below="@+id/SubjectTextList"
            android:layout_alignParentStart="true"
            android:capitalize="words" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="11"
            android:id="@+id/IdText"
            android:padding="2dp"
            android:layout_alignBottom="@+id/ProjectTitleTextList"
            android:layout_toEndOf="@+id/ProjectTitleTextList"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Worth"
            android:id="@+id/WorthText"
            android:textColor="#ff000000"
            android:textAlignment="textEnd"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/SubjectTextList"
            android:layout_above="@+id/ProjectTitleTextList"
            android:padding="2dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Details scrolling text will go here."
            android:id="@+id/DetailsTextList"
            android:layout_below="@+id/ProjectTitleTextList"
            android:layout_alignParentStart="true"
            android:textColor="#ff000000"
            android:padding="2dp"
            android:maxLines = "1"
            android:scrollbars = "vertical" />

        <!--<ImageButton-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/imageButton"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:layout_below="@+id/BBB"-->
            <!--android:layout_alignEnd="@+id/BBB" />-->

    </RelativeLayout>
</LinearLayout>
